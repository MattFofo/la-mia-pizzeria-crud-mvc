@model List<Pizza>

<table class="table caption-top">
    <thead>
        <tr>
            <td>Nome</td>
            <td>Immagine</td>
            <td>Descrizione</td>
            <td>Prezzo</td>
            <td>Azioni</td>
        </tr>
    </thead>
    @{
        if (Model.Count() == 0)
        {
            <h1>Non è stata inserita nessuna Pizza!</h1>

        } else
        {
            <tbody>
            @{
                foreach (var pizza in Model)
                {
                    <tr class="py-2">
                        <td><a asp-controller="Pizza" asp-action="Details" asp-route-id="@pizza.Id">@pizza.Name</a></td>
                        <td class="w-25"><img class="img-thumbnail w-50 h-50" src="@pizza.Image" /></td>
                        <td>@pizza.Description</td>
                        <td>@pizza.Price &euro;</td>
                        <td>
                            <a class="btn btn-warning" asp-controller="Pizza" asp-action="Edit" asp-route-id="@pizza.Id">edit</a>
                            @*<a class="btn btn-danger" asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id ">delete</a>*@
                            
                            @using (Html.BeginForm()) 
                            {
                                <button class="btn btn-danger" onclick="return confirm('Are you sure?')" asp-controller="Pizza" asp-action="Delete" asp-route-id="@pizza.Id ">Delete</button>
                            }
                        </td>
                    </tr>
                }
            }
            </tbody>  
        }
    }
</table>
