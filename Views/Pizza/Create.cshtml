@model PizzaPivotCrud

<div class="container py-4">
    <form class="p-4 form-create" asp-controller="Pizza" asp-action="Create" method="post">
        @Html.AntiForgeryToken()

        <div class="my-3">
            <h1 class="">Aggiungi una Pizza</h1>
            <a class="btn btn-primary" asp-controller="Pizza" asp-action="Index">Torna alla lista</a>
        </div>
        <div class="mb-3">
            <strong>Nome Pizza</strong>
            <input asp-for="Pizza.Name" class="d-block w-100" />
            <span asp-validation-for="Pizza.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Descrizione</strong>
            <input asp-for="Pizza.Description" class="d-block w-100" />
            <span asp-validation-for="Pizza.Description" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Url Immagine</strong>
            <input asp-for="Pizza.Image" class="d-block w-100" />
            <span asp-validation-for="Pizza.Image" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Prezzo</strong>
            <input asp-for="Pizza.Price" class="d-block w-100" />
            <span asp-validation-for="Pizza.Price" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <strong>Category</strong>
            <select asp-for="Pizza.CategoryId" class="d-block w-100" />
            @foreach (Category category in Model.Categories)
            {
                if (Model.Pizza.CategoryId != null && Model.Pizza.CategoryId == category.Id)
                {
                    <option value="@category.Id" selected>@category.Name</option>
                }
                else
                {
                    <option value="@category.Id">@category.Name</option>
                }
            }
        </div>
        <div class="text-end">
            <input type="submit" class="btn btn-small btn-info" value="Salva">
        </div>
    </form>
</div>
